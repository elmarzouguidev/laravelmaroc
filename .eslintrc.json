{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["resources/js/utils/*"],
    "rules": {
        "no-console": ["error", {"allow": ["warn", "error"]}],
        "semi": ["error", "always"],
        "no-unused-vars": ["error", { "args": "after-used", "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
    }
}
